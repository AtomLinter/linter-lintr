{
  "name": "linter-lintr",
  "main": "./lib/main",
  "version": "1.1.1",
  "description": "Atom linter plugin for R, using lintr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-lintr"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "R",
      "description": "Full path to binary (e.g. /usr/local/bin/R)"
    },
    "linters": {
      "type": "string",
      "default": "default_linters",
      "description": "which linters to use on the code"
    }
  },
  "dependencies": {
    "atom-linter": "^9.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0"
  },
  "package-deps": [
    "linter",
    "language-r"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  }
}
