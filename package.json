{
  "name": "linter-lintr",
  "main": "./lib/main",
  "version": "1.0.0",
  "description": "Atom linter plugin for R, using lintr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-lintr"
  },
  "dependencies": {
    "atom-linter": "^3.4.0",
    "atom-package-deps": "^3.0.5"
  },
  "devDependencies": {
    "coffeelint": "^1.14.1"
  },
  "package-deps": [
    "linter",
    "language-r"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/coffeelint lib"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
