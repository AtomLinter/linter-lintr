{
  "name": "linter-lintr",
  "main": "./lib/main",
  "version": "1.0.4",
  "description": "Atom linter plugin for R, using lintr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-lintr"
  },
  "dependencies": {
    "atom-linter": "^4.1.1",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "coffeelint": "^1.14.1",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-react": "^4.3.0",
    "eslint-plugin-jsx-a11y": "^0.6.2"
  },
  "package-deps": [
    "linter",
    "language-r"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/coffeelint lib"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "comma-dangle": 0,
      "semi": 0
    }
  }
}
