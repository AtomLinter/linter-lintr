{
  "name": "linter-lintr",
  "main": "./lib/main",
  "version": "1.0.4",
  "description": "Atom linter plugin for R, using lintr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-lintr"
  },
  "dependencies": {
    "atom-linter": "^5.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "coffeelint": "^1.15.2",
    "eslint": "^2.9.0",
    "eslint-config-airbnb-base": "^2.0.0",
    "eslint-plugin-import": "^1.6.1"
  },
  "package-deps": [
    "linter",
    "language-r"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "coffeelint lib && eslint spec"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "comma-dangle": 0,
      "semi": 0
    }
  }
}
