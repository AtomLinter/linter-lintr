{
  "name": "linter-lintr",
  "main": "./lib/main",
  "version": "1.2.0",
  "description": "Atom linter plugin for R, using lintr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-lintr"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "R",
      "description": "Full path to binary (e.g. /usr/local/bin/R)"
    },
    "linters": {
      "type": "string",
      "default": "default_linters",
      "description": "which linters to use on the code"
    }
  },
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.1.0"
  },
  "devDependencies": {
    "eslint": "6.0.1",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.18.0",
    "jasmine-fix": "1.3.1"
  },
  "package-deps": [
    "linter:2.0.0",
    "atom-language-r"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
